<?xml version="1.0" encoding="utf-8" ?>
<Plants>

  <!-- =========================== Drug Plants ============================== -->

  <!-- =========================== NAMES AND TEXTURES ARE PLACEHOLDERS ============================== -->

  <ThingDef ParentName="PlantBase">
    <defName>RimFlower</defName>
    <label>rim flower</label>
    <description>A bright colored plant that can be harvested and turned into a stimulant drug.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>.6</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/RimFlower</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible>
      <nutrition>0.20</nutrition>
    </ingestible>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <shootsSeeds>false</shootsSeeds>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawRimFlower</harvestedThingDef>
      <harvestDestroys>true</harvestDestroys>
      <harvestYield>3</harvestYield>
      <!-- DISABLED FOR TESTING PURPOSES
      <sowMinSkill>7</sowMinSkill> -->
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <sowResearchPrerequisites>
        <li>DrugCultivating</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <growDays>4.5</growDays>
      <fertilityFactorGrowthRate>0.4</fertilityFactorGrowthRate>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>


  <ThingDef ParentName="PlantBase">
    <defName>OpiumPlant</defName>
    <label>Opium</label>
    <description>Plant that can be used to create morphine</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>.4</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/OpiumPlant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <shootsSeeds>false</shootsSeeds>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawRimFlower</harvestedThingDef>
      <harvestDestroys>true</harvestDestroys>
      <harvestYield>3.5</harvestYield>
      <!-- DISABLED FOR TESTING PURPOSES
      <sowMinSkill>8</sowMinSkill> -->
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <sowResearchPrerequisites>
        <li>DrugCultivating</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <growDays>6</growDays>
      <fertilityFactorGrowthRate>0.3</fertilityFactorGrowthRate>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>


</Plants>

