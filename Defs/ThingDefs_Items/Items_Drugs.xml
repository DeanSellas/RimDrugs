<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- =========================== Drug Buildings ============================== -->

  <!-- =========================== NAMES AND TEXTURES ARE PLACEHOLDERS ============================== -->

<ThingDef ParentName="MealBase">
    <defName>RimPowder</defName>
    <label>RimPowder</label>
    <description>Stimulant Drug that is created from RimFlower</description>
    <graphicData>
      <texPath>Things/Item/Drug/RimPowder</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <stackLimit>10</stackLimit>
    <statBases>
      <DeteriorationRate>0</DeteriorationRate>
      <MarketValue>50</MarketValue>
    </statBases>
    <thingCategories>
      <li>StimulantDrug</li>
    </thingCategories>
    <ingestible>
      <preferability>NeverForNutrition</preferability>
      <foodType>Processed</foodType>
      <nutrition>0.08</nutrition>
      <joy>0.17</joy>
      <joyKind>Chemical</joyKind>
      <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
      <soundEat>Meal_Eat</soundEat>
      <isPleasureDrug>true</isPleasureDrug>
      <hediffGivers>
        <li>
          <chance>1</chance>
          <hediffDef>RimPowder</hediffDef>
        </li>
      </hediffGivers>
    </ingestible>
    <techLevel>Neolithic</techLevel>
  </ThingDef>


  <ThingDef ParentName="ResourceBase">
    <defName>Morphine</defName>
    <label>morphine</label>
    <description>Painkiller that can be used for medical or recreational purposes</description>
    <thingClass>Medicine</thingClass>
    <graphicData>
      <texPath>Things/Item/Resource/Medicine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>18</MarketValue>
      <Flammability>1.0</Flammability>
      <MedicalPotency>1.0</MedicalPotency>
      <DeteriorationRate>2</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
  </ThingDef>


</Defs>