<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>RimPowder</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>rimpowder</label>
    <defaultLabelColor>(0.125,0.596,0.82)</defaultLabelColor>
    <initialSeverity>0.15</initialSeverity>
    <comps>
      <li>
        <compClass>HediffComp_Effecter</compClass>
        <stateEffecter>Drunk</stateEffecter>
        <severityIndices>
          <min>3</min>
          <max>5</max>
        </severityIndices>
      </li>
      <li>
        <compClass>HediffComp_Immunizable</compClass>
        <severityPerDayNotImmune>-1.5</severityPerDayNotImmune>
      </li>
    </comps>
      <stages>
        <li>
          <minSeverity>0.15</minSeverity>
          <label>High</label>
          <painFactor>0.6</painFactor>
          <vomitMtbDays>0.75</vomitMtbDays>
          <tale>Drunk</tale>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.35</offset>
              </li>
              <li>
                <capacity>Moving</capacity>
                <offset>0.20</offset>
              </li>
            </capMods>
        </li>
        <li>
          <minSeverity>0.45</minSeverity>
          <label>Slightly Overdosed</label>
          <painFactor>0.3</painFactor>
          <socialFightChanceFactor>5.0</socialFightChanceFactor>
          <vomitMtbDays>0.2</vomitMtbDays>
          <painOffset>0.05</painOffset>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.60</offset>
              </li>
              <li>
                <capacity>Moving</capacity>
                <offset>0.40</offset>
              </li>
            </capMods>
        </li>
        <li>
          <minSeverity>0.85</minSeverity>
          <label>Overdosed</label>
          <painFactor>0.1</painFactor>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <setMax>0.1</setMax>
              </li>
            </capMods>
        </li>
        <li>
          <minSeverity>.97</minSeverity>
          <label>Dead</label>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <setMax>0</setMax>
              </li>
            </capMods>
        </li>
      </stages>
  </HediffDef>

</Defs>